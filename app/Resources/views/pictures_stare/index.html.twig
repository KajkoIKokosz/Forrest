{% extends 'base.html.twig' %}

{% block body %}
    <h1>Pictures list</h1>

    <table>
        <thead>
            <tr>
                <th>Imagename</th>
                <th>Id</th>
                <th>Source</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for picture in pictures %}
            <tr>
                <td><a href="{{ path('pictures_show', { 'id': picture.id }) }}">{{ picture.imageName }}</a></td>
                <td>{{ picture.id }}</td>
                <td>{{ picture.source }}</td>
                <td>{{ picture.description }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('pictures_show', { 'id': picture.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('pictures_edit', { 'id': picture.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('pictures_new') }}">Create a new picture</a>
        </li>
    </ul>
{% endblock %}
