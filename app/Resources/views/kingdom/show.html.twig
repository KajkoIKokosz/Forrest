{% extends 'base.html.twig' %}

{% block body %}
    <h1>Kingdom</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ kingdom.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ kingdom.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('kingdom_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('kingdom_edit', { 'id': kingdom.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
